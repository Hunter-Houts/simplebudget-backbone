<div class="container-fluid text-center;" id="main-card">
    <div class ="row">
        <div class="col l12">
            <h2>Edit Profile</h2>
            <div class = "col l8 offset-l2">
                <form action="/users/{{user.id}}" method="POST" id="editUser">
                    <input name="_method" type="hidden" value="patch" />
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                    <h5 for="username">Username</h5>
                        </div>
                        <div class="form-group col-sm-6">
                            <input class="form-control disa" id="username" name="username" pattern=".*\S+.*" title="username cannot be blank" value="{{user.username}}" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                    <h5 for="email">Email</h5>
                        </div>
                        <div class="form-group col-sm-6">
                            <input class="form-control" id="email" name="email" pattern=".*\S+.*" title="email cannot be blank" type="email" value="{{user.email}}" required="required" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                    <h5 for="password">New Password</h5>
                        </div>
                        <div class="form-group col-sm-6">
                            <input type="password" id="password" class="form-control" name ="password" />
                        </div>
                    </div>
                    <input  class="btn editUser" type="submit" />
                </form>
            </div>
        </div>
    </div>
</div>
<br>
