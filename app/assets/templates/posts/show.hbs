<div class="container-fluid">
<div class="card d-flex flex-nowrap w-100 postShow" id="main-card">
    <div class="card-header">
        <span>Posted by: {{post.user.username}}</span>
    </div>
    <div class="card-body">
        <h1 class="card-title d-flex flex-nowrap">{{post.title}}</h1>
        <p class="card-text d-flex flex-nowrap">{{post.body}}</p>
    </div>
    {{#if current_user.id}}
<form  style="display: none;" action='/comment/{{id}}' method='post' id="commentForm">
    <div class='form-group'>
        <div class='form-group input-width pr-4'>
           <label for='comment'>Comment:</label>
           <textarea class='form-control' rows='4' cols='50' id="comment" name="commentbody"></textarea>
            <br/>
            </div>
       <input class="btn postShow btn-outline-secondary w-50 custom-width" type='submit'/> </div> </form>
    {{/if}}
    {{#ifEquals current_user.id post.user.id}}
<a href='/posts/{{id}}/edit'><button class="btn postShow btn-outline-secondary w-50 custom-width">Edit Post</button><br/></a>
    {{/ifEquals}}
    <!-- Checking if loggedin -->
    {{#if current_user.id}}
<button class="btn postShow btn-outline-secondary w-50 custom-width" id="show">Comment</button>
{{/if}}
{{#if post.comments}}
<ul>
    {{#each post.comments}}
    <li style="list-style-type: none;">
        <div class="card d-flex flex-nowrap postShow">
            <div class="card-header d-flex flex-nowrap">
                <span th:text="'Posted By: ' + ${comment.user.username}"></span>
            </div>
            <div class="card-body">
                <p class="card-text d-flex flex-nowrap" th:text="${comment.commentbody}"></p>
            </div>
            <button  th:if="${comment != null}" sec:authorize='isAuthenticated()' class="showReply btn postShow btn-outline-secondary w-50 custom-width">Reply</button> <br/> <button th:if="${loggedInUser.id == comment.user.id}" class="editComment btn postShow btn-outline-secondary w-50 custom-width mt-0">Edit</button>
            <form th:if="${loggedInUser.id == comment.user.id}" style="display: none;" th:action='|/comment/${comment.id}/edit|' th:method='post' sec:authorize='isAuthenticated()' class="editForm">
                <div class='form-group'>
                    <div class='form-group input-width pr-4'>
                        <label for='edit'>Edit:</label>
                        <textarea class='form-control' rows='4' cols='50' id="edit" name="commentedit" th:text="${comment.commentbody}" required="required"></textarea>
                        <br/>
                    </div>
                    <input class="btn postShow btn-outline-secondary w-50 custom-width" type='submit'/> <br/> <input class="btn postShow btn-outline-secondary w-50 custom-width" type="submit" th:formmethod="post" th:formaction="|/comment/${comment.id}/delete|" value="Delete"/>

                </div>

            </form>
            <form  style="display: none;" th:action='|/reply/${comment.id}|' th:method='post' sec:authorize='isAuthenticated()' class="replyForm">
                <div class='form-group'>
                    <div class='form-group input-width pr-4'>
                        <label for='reply'>Reply:</label>
                        <textarea class='form-control' rows='4' cols='50' id="reply" name="commentreply" required="required"></textarea>
                        <br/>
                    </div>
                    <input class="btn postShow btn-outline-secondary w-50 custom-width" type='submit'/>

                </div>

            </form>
            <ul>
                <li style="list-style-type: none;" th:each="comment : ${comment.comments}">
                    <div class="card d-flex flex-nowrap postShow">
                        <div class="card-header d-flex flex-nowrap">
                            <span th:text="'Posted By: ' + ${comment.user.username}"></span>
                        </div>
                        <div class="card-body">
                            <p class="card-text d-flex flex-nowrap" th:text="${comment.commentbody}"></p>
                        </div>
                    </div>
                    <button th:if="${loggedInUser.id == comment.user.id}" class="editReply btn postShow btn-outline-secondary w-50 custom-width1">Edit</button>
                    <form  th:if="${loggedInUser.id == comment.user.id}" style="display: none;" th:action='|/comment/${comment.id}/edit|' th:method='post' sec:authorize='isAuthenticated()' class="editReplyForm">
                        <div class='form-group'>
                            <div class='form-group input-width1 pr-4'>
                                <label for='edit'>Edit:</label>
                                <textarea class='form-control' rows='4' cols='50' id="edit" name="commentedit" th:text="${comment.commentbody}" required="required"></textarea>
                                <br/>
                            </div>
                            <input class="btn postShow btn-outline-secondary w-50 custom-width1" type='submit'/> <br/> <input class="btn postShow btn-outline-secondary w-50 custom-width1" type="submit" th:formmethod="post" th:formaction="|/comment/${comment.id}/delete|" value="Delete"/>

                        </div>

                    </form>
                </li>
            </ul>
        </div>
    </li>
    {{/each}}
</ul>
{{/if}}
</div>
</div>
